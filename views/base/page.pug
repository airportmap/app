doctype html
html( lang= app.lang )

  head
    meta( charset= "utf-8" )
    meta( name= "viewport", content= "width=device-width, initial-scale=1.0" )

    if meta.title
      title= meta.title
    if meta.description
      meta( name= "description", content= meta.description )
    if meta.robots
      meta( name= "robots", content= meta.robots )
    if meta.canonical
      link( rel= "canonical", href= meta.canonical )

    if assets.preload
      each preload in assets.preload
        link(
          rel= "preload",
          href= preload.href,
          as= preload.as,
          type= preload.type,
          crossorigin= preload.crossOrigin
        )

    if assets.css
      each css in assets.css
        link(
          rel= css.rel || "stylesheet",
          href= css.href,
          media= css.media
        )

    if assets.js
      each js in assets.js
        script(
          src= js.src,
          type= js.type = "module" ? "module" : "text/javascript",
          defer= js.defer ? true : undefined,
          async= js.async ? true : undefined
        )


  body#top( class= bodyClass ? bodyClass : "__apm" )

    include ../parts/header

    main#main.__apm_main( role= "main" )
      block content

    include ../parts/footer
