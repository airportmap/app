doctype html
html( lang= lang )

  head
    meta( charset= 'utf-8' )
    meta( name= 'viewport', content= 'width=device-width, initial-scale=1' )

    title= meta.title
    if meta.description
      meta( name= 'description', content= meta.description )
    if meta.canonical
      link( rel= 'canonical', href= meta.canonical )
    if meta.robots
      meta( name= 'robots', content= meta.robots )

    if assets.preload
      each preload in assets.preload
        link(
          rel='preload',
          href= preload.href,
          as= preload.as,
          type= preload.type
        )

    if assets.js
      each js in assets.js
        script(
          src= js.src,
          type= js.module ? 'module' : js.type || 'text/javascript',
          defer= js.defer ? true : undefined,
          async= js.async ? true : undefined
        )

    if assets.css
      each css in assets.css
        link(
          rel= css.rel || 'stylesheet',
          href= css.href,
          media= css.media
        )


  body#top( class= bodyClass )

    include ../components/header

    main#main.__apm_main( role= 'main' )
      block content

    include ../components/footer
