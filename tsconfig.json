{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [ "ES2020", "DOM" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": [ "core/*" ],
      "@pages/*": [ "pages/*" ],
      "@shared/*": [ "shared/*" ],
      "@config/*": [ "config/*" ]
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "dist", "**/*.client.ts" ]
}
