{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [ "ES2022", "DOM" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": [ "config/*" ],
      "@core/*": [ "core/*" ]
    }
  }
}
