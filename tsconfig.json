{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [ "ES2022" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@types": [ "src/types.ts" ],
      "@core/*": [ "src/core/*" ],
      "@controller/*": [ "src/controller/*" ],
      "@modules/*": [ "modules/*" ]
    }
  }
}
